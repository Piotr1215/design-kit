#!/usr/bin/env bash
set -euo pipefail

BRANCH_DIR=$(~/.claude/design-kit/auto-connect-design.sh | grep "Branch directory:" | cut -d: -f2 | xargs)
TASKS_DIR="$BRANCH_DIR/tasks"

if [[ ! -d "$TASKS_DIR" ]]; then
    echo "No tasks found"
    exit 1
fi

for task in "$TASKS_DIR"/TASK-*.md; do
    [[ -f "$task" ]] && echo "$task"
done
